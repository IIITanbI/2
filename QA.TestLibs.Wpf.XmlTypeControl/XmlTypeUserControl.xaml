<UserControl x:Class="QA.TestLibs.Wpf.XmlTypeControl.XmlTypeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QA.TestLibs.Wpf.XmlTypeControl"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Name="XmlTypeNameLabel" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"></Label>
        <Label Name="XmlTypeDescriptionLabel" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"></Label>
        <ListBox Name="XmlPropertiesListBox" Grid.Column="0" Grid.Row="2"></ListBox>
    </Grid>
</UserControl>
