<?xml version="1.0" encoding="utf-8"?>
<webElement name="HeroCenteredUI">
  <description>Hero Centered UI</description>
  <webLocator>//*[]</webLocator>

  <childs>
    <webElement name="LeftArrow">
      <description>Left arrow</description>
      <webLocator>.//a[contains(@class, "btn-prev")]</webLocator>
    </webElement>
    <webElement name="RightArrow">
      <description>Left arrow</description>
      <webLocator>.//a[contains(@class, "btn-next")]</webLocator>
    </webElement>
    <webElement name="Link">
      <description>Link</description>
      <weblocator>(.//div[contains(@class, 'slide active')])//a</weblocator>
    </webElement>
    
    <webElement name="Switcher">
      <description>Switcher</description>
      <weblocator>.//div[contains(@class, 'switcher')]</weblocator>

      <childs>
        <webElement name="Button1">
          <description>Button1</description>
          <weblocator>.//div[contains(@class, 'switcher')]//li[contains(@class, 'active')]</weblocator>
        </webElement>
      </childs>
    </webElement>

    <webElement name="LinksTab">
      <description>Links tab</description>
      <webLocator>(.//a[contains(@class, 'x-tab-right')])[2]</webLocator>

      <childs>
        <webElement name="LinkNameInput">
          <description>Input for Link Name</description>
          <webLocator>.//input[contains(@name, 'link/title')]</webLocator>
        </webElement>
        <webElement name="PathInput">
          <description>Input for Path</description>
          <webLocator>.//input[contains(@name, 'link/path')]</webLocator>
        </webElement>
        <webElement name="TargetDropDownList">
          <description>DropDownList for Target</description>
          <webLocator>(.//input[contains(@name, 'link/target')]/following::input)[1]</webLocator>
        </webElement>
        <webElement name="DisplayModeDropDownList">
          <description>DropDownList for Display Mode</description>
          <webLocator>(.//input[contains(@name, 'link/displayAs')]/following::input)[1]</webLocator>
        </webElement>
        <webElement name="TooltipInput">
          <description>Input for Tooltip</description>
          <webLocator>.//input[contains(@name, 'link/tooltip')]</webLocator>
        </webElement>
      </childs>
    </webElement>
    <webElement name="ImageTab">
      <description>Image tab</description>
      <webLocator>(.//a[contains(@class, 'x-tab-right')])[3]</webLocator>

      <childs>
        <webElement name="AltTextInput">
          <description>Input for Alt Text</description>
          <webLocator>.//input[contains(@name, 'splitbanner/alt')]</webLocator>
        </webElement>
        <webElement name="DirectionDropDownList">
          <description>DropDownList for Direction</description>
          <webLocator>(.//input[contains(@name, 'splitbanner/direction')]/following::input)[1]</webLocator>
        </webElement>
      </childs>
    </webElement>
    <webElement name="LayoutTab">
      <description>Layout tab</description>
      <webLocator>(.//a[contains(@class, 'x-tab-right')])[4]</webLocator>

      <childs>
        <webElement name="StyleDropDownList">
          <description>DropDownList for style</description>
          <webLocator>(.//input[contains(@name, 'style')]/following::input)[1]</webLocator>
        </webElement>
        <webElement name="breadcrumbsCheckbox">
          <description>Checkbox for breadcrumbs</description>
          <webLocator>(.//input[contains(@name, 'showBreadcrumb')]/following::input)[1]</webLocator>
        </webElement>
      </childs>
    </webElement>

    <webElement name="VideoTab">
      <description>Video tab</description>
      <webLocator>(.//a[contains(@class, 'x-tab-right')])[5]</webLocator>

      <childs>
        <webElement name="VideoPathInput">
          <description>Input for video path</description>
          <webLocator>.//input[contains(@name, 'src')]</webLocator>
        </webElement>
      </childs>
    </webElement>
    <webElement name="VideoPosterTab">
      <description>Video poster tab</description>
      <webLocator>(.//a[contains(@class, 'x-tab-right')])[6]</webLocator>

      <childs>
        <webElement name="AltTextInput">
          <description>Input for Alt Text</description>
          <webLocator>.//input[contains(@name, 'poster/alt')]</webLocator>
        </webElement>
        <webElement name="DirectionDropDownList">
          <description>DropDownList for Direction</description>
          <webLocator>(.//input[contains(@name, 'poster/direction')]/following::input)[1]</webLocator>
        </webElement>
      </childs>
    </webElement>
  </childs>
</webElement>
